# Required
ANTHROPIC_API_KEY=your-api-key-here  # Format: sk-ant-api03-...
PERPLEXITY_API_KEY=pplx-abcde # For research (recommended but optional)

# Optional - defaults shown
MODEL=claude-3-7-sonnet-20250219  # Recommended models: claude-3-7-sonnet-20250219, claude-3-opus-20240229
PERPLEXITY_MODEL=sonar-pro        # Make sure you have access to sonar-pro otherwise you can use sonar regular.
MAX_TOKENS=4000                   # Maximum tokens for model responses
TEMPERATURE=0.7                   # Temperature for model responses (0.0-1.0)
DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=info                    # Log level (debug, info, warn, error)
DEFAULT_SUBTASKS=3                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME=MCP Chat Client

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=app_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
API_V1_STR=/api/v1
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# JWT Configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WebSocket Configuration
WS_PING_TIMEOUT=20
WS_MAX_HISTORY_SIZE=100
WS_MAX_CONNECTIONS_PER_USER=5
WS_RATE_LIMIT=60

# Test Configuration
TEST_DB=postgresql
DOCKER_SERVICE_HOST=backend-test
DOCKER_SERVICE_PORT=8000

# Monitoring Configuration
TELEMETRY_ENABLED=true
MODEL_USAGE_WINDOW=3600  # 1 hour in seconds
CACHE_HIT_WINDOW=3600   # 1 hour in seconds